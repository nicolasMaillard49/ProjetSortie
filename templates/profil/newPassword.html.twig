{% extends 'base.html.twig' %}

{% block title %}Change Password {% endblock %}


    {% block body %}

        <div class="container">

            <div class="row ">

                <div class="offset-4 col-4 mt-4 mb-5">

                    <div class="row text-center mt-4">
                        <h1>Modification du Mot de passe</h1>
                    </div>
                    {% for message in app.flashes ('Failed') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}
                   <form action="{{ path('app_profil_new_password',{ id:user.id }) }}" method="post">

                        <div class="mt-lg-5">
                            <label class="labels">nouveau Mot de Passe</label>
                            <input type="password" class="form-control border border-primary my-2"
                                   name="new_password" value="{{ app.request.get('new_password') }}" required>
                        </div>

                        <div class="">
                            <label class="labels">confirmation</label>
                            <input type="password" class="form-control border border-primary my-2"
                                   name="new_password_confirm" value="{{ app.request.get('new_password') }}" required>
                        </div>
                        <div class="row text-center">
                            <div class="col-6 mt-2">
                                <button class="btn btn-primary m-lg-4" type="submit">
                                    valider
                                </button>
                            </div>
                            <div class="col-6 mt-2">
                                <a href="{{ path('app_login') }}">
                                    <button type="button" class="btn btn-primary m-lg-4">Annulez</button>
                                </a>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
            <div class="col-4">

            </div>
        </div>
{% endblock %}