{% extends 'base.html.twig' %}

{% block title %}Changement de mot de passe{% endblock %}

{% block body %}

    <div class="container">

<div class="row text-center mt-4">
    <h1>Modification du Mot de passe</h1>
</div>

<div class="row ">


    <div class="col-4">

    </div>
    <div class="col-4 mt-4 mb-5">


    <form action="{{ path('app_profil_modify_password')}}" method="post">

    <div class="mt-lg-5">
        <label class="labels">Ancien Mot de Passe</label>
        <input type="text" class="form-control border border-primary my-2"
             name="old_password" value="{{ app.request.get('old_password') }}" required>
    </div>

    <div class="">
        <label class="labels">nouveau Mot de Passe</label>
        <input type="text" class="form-control border border-primary my-2"
               name="new_password" value="{{ app.request.get('new_password') }}" required>
    </div>

        <div class="">
            <label class="labels">confirmation</label>
            <input type="text" class="form-control border border-primary my-2"
                   name="new_password_confirm" value="{{ app.request.get('new_password') }}" required>
        </div>
        <div class="row text-center">
            <div class="col-6 mt-2">
                <button class="btn btn-primary m-lg-4" type="submit">
                    valider
                </button>
            </div>
            <div class="col-6 mt-2">
            <a href="{{ path('app_liste_sortie')}}">
                <button type="button" class="btn btn-primary m-lg-4"> Annulez</button>
            </a>
            </div>
        </div>

    </form>
</div>
</div>
        <div class="col-4">

        </div>
    </div>
{% endblock %}